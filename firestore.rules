rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Room instances belong to users
      match /rooms/{roomId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Sessions belong to users
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Planned sessions belong to users
      match /planned_sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Seasons belong to users
      match /seasons/{seasonId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Recurring blocks belong to users
      match /recurring_blocks/{blockId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // Global inventory items belong to users
      match /inventory/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
